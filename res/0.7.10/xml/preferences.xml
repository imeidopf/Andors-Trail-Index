<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
  xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/preferences_display_category">
        <CheckBoxPreference android:title="@string/preferences_display_fullscreen_title" android:key="fullscreen" android:summary="@string/preferences_display_fullscreen" android:defaultValue="true" />
        <com.gpl.rpg.AndorsTrail.view.CustomListPreference android:entries="@array/preferences_display_theme" android:title="@string/preferences_display_theme_title" android:key="selectedTheme" android:summary="@string/preferences_display_theme" android:defaultValue="0" android:entryValues="@array/preferences_display_theme_values" />
        <com.gpl.rpg.AndorsTrail.view.CustomListPreference android:entries="@array/preferences_display_scaling_factor" android:title="@string/preferences_display_scaling_factor_title" android:key="scaling_factor" android:summary="@string/preferences_display_scaling_factor" android:defaultValue="1.0f" android:entryValues="@array/preferences_display_scaling_factor_values" />
        <CheckBoxPreference android:title="@string/preferences_optimized_drawing_title" android:key="optimized_drawing" android:summary="@string/preferences_optimized_drawing" android:defaultValue="false" />
        <CheckBoxPreference android:title="@string/preferences_high_quality_filters_title" android:key="high_quality_filters" android:summary="@string/preferences_high_quality_filters" android:defaultValue="true" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/preferences_dialog_category">
        <CheckBoxPreference android:title="@string/preferences_dialog_confirmrest_title" android:key="confirm_rest" android:summary="@string/preferences_dialog_confirmrest" android:defaultValue="true" />
        <CheckBoxPreference android:title="@string/preferences_dialog_confirmattack_title" android:key="confirm_attack" android:summary="@string/preferences_dialog_confirmattack" android:defaultValue="true" />
        <com.gpl.rpg.AndorsTrail.view.CustomListPreference android:entries="@array/preferences_display_loot" android:title="@string/preferences_dialog_monsterloot_title" android:key="display_lootdialog" android:summary="@string/preferences_dialog_monsterloot" android:defaultValue="0" android:entryValues="@array/preferences_display_loot_values" />
        <com.gpl.rpg.AndorsTrail.view.CustomListPreference android:entries="@array/preferences_display_overwrite_savegame_entries" android:title="@string/preferences_dialog_overwrite_savegame_title" android:key="display_overwrite_savegame" android:summary="@string/preferences_dialog_overwrite_savegame" android:defaultValue="0" android:entryValues="@array/preferences_display_overwrite_savegame_values" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/preferences_combat_category">
        <com.gpl.rpg.AndorsTrail.view.CustomListPreference android:entries="@array/preferences_attackspeed" android:title="@string/preferences_combat_speed_title" android:key="attackspeed" android:summary="@string/preferences_combat_speed" android:defaultValue="1000" android:entryValues="@array/preferences_attackspeed_values" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/preferences_movement_category">
        <com.gpl.rpg.AndorsTrail.view.CustomListPreference android:entries="@array/preferences_movementmethods" android:title="@string/preferences_movementmethod_title" android:key="movementmethod" android:summary="@string/preferences_movementmethod" android:defaultValue="0" android:entryValues="@array/preferences_movementmethod_values" />
        <com.gpl.rpg.AndorsTrail.view.CustomListPreference android:entries="@array/preferences_movement_dpad_positions" android:title="@string/preferences_movement_dpad_position_title" android:key="dpadposition" android:summary="@string/preferences_movement_dpad_position" android:defaultValue="0" android:entryValues="@array/preferences_movement_dpad_positions_values" />
        <CheckBoxPreference android:title="@string/preferences_movement_dpad_minimizeable_title" android:key="dpadMinimizeable" android:summary="@string/preferences_movement_dpad_minimizeable" android:defaultValue="true" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/preferences_ui_category">
        <CheckBoxPreference android:title="@string/preferences_ui_enable_animations_title" android:key="enableUiAnimations" android:summary="@string/preferences_ui_enable_animations" android:defaultValue="true" />
        <com.gpl.rpg.AndorsTrail.view.CustomListPreference android:entries="@array/preferences_quickslots_placements" android:title="@string/preferences_quickslots_placement" android:key="quickslots_placement" android:summary="@string/preferences_quickslots_placement_summary" android:defaultValue="0" android:entryValues="@array/preferences_quickslots_placements_values" />
        <CheckBoxPreference android:title="@string/preferences_ui_show_quickslots_when_toolbox_is_visible_title" android:key="showQuickslotsWhenToolboxIsVisible" android:summary="@string/preferences_ui_show_quickslots_when_toolbox_is_visible" android:defaultValue="false" />
        <com.gpl.rpg.AndorsTrail.view.CustomListPreference android:entries="@array/preferences_language" android:title="@string/preferences_language" android:key="language" android:summary="@string/preferences_language_description" android:defaultValue="default" android:entryValues="@array/preferences_language_values" />
    </PreferenceCategory>
</PreferenceScreen>